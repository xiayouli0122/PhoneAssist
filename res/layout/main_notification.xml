<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main_notifi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
     >
    <ImageView
        android:id="@+id/status_bar_icon"
        android:layout_width="@dimen/status_bar_album_art"
        android:layout_height="@dimen/status_bar_album_art"
         android:background= "#1D3741"
        android:scaleType="center"
        android:src="@drawable/icon"
        />

    <LinearLayout 
        android:id="@+id/status_bar_1"
        android:layout_width="42dp"
        android:layout_height="fill_parent"
        android:background="?android:listChoiceBackgroundIndicator"
        android:gravity="center_horizontal"
        android:layout_weight="1"
        >
         <ImageView 
	            android:layout_width="@dimen/status_bar_button_width_height2"
	            android:layout_height="@dimen/status_bar_button_width_height2"
	            android:layout_gravity="center"
	            />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/status_bar_2"
        android:layout_width="42dp"
        android:layout_height="fill_parent"
        android:background="?android:listChoiceBackgroundIndicator"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        >
         <ImageView 
	            android:layout_width="@dimen/status_bar_button_width_height2"
	            android:layout_height="@dimen/status_bar_button_width_height2"
	            android:layout_gravity="center"
	            />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/status_bar_3"
        android:layout_width="42dp"
        android:layout_height="fill_parent"
        android:background="?android:listChoiceBackgroundIndicator"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        >
         <ImageView 
	             android:src="@drawable/status_bar_music"
	            android:layout_width="@dimen/status_bar_button_width_height2"
	            android:layout_height="@dimen/status_bar_button_width_height2"
	            android:layout_gravity="center"
	            />
    </LinearLayout>
    
     <LinearLayout 
        android:id="@+id/status_bar_4"
        android:layout_width="42dp"
        android:layout_height="fill_parent"
        android:background="?android:listChoiceBackgroundIndicator"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        >
         <ImageView 
             android:id="@+id/iv_statis_bar_flashlight"
	            android:layout_width="@dimen/status_bar_button_width_height2"
	            android:layout_height="@dimen/status_bar_button_width_height2"
	            android:layout_gravity="center"
	            />
    </LinearLayout>
    
     <LinearLayout 
        android:id="@+id/status_bar_5"
        android:layout_width="42dp"
        android:layout_height="fill_parent"
        android:background="?android:listChoiceBackgroundIndicator"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        >
         <ImageView 
	             android:src="@drawable/status_bar_capture"
	            android:layout_width="@dimen/status_bar_button_width_height2"
	            android:layout_height="@dimen/status_bar_button_width_height2"
	            android:layout_gravity="center"
	            />
    </LinearLayout>
    
     <LinearLayout 
        android:id="@+id/status_bar_6"
        android:layout_width="42dp"
        android:layout_height="fill_parent"
        android:background="?android:listChoiceBackgroundIndicator"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        >
         <ImageView 
	             android:src="@drawable/status_bar_quick_capture"
	            android:layout_width="@dimen/status_bar_button_width_height2"
	            android:layout_height="@dimen/status_bar_button_width_height2"
	            android:layout_gravity="center"
	            />
    </LinearLayout>

</LinearLayout>
