<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main_notifi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_traffic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/status_bar_icon"
            android:layout_width="@dimen/status_bar_album_art"
            android:layout_height="@dimen/status_bar_album_art"
            android:layout_alignParentLeft="true"
            android:background="#1D3741"
            android:scaleType="center"
            android:src="@drawable/icon" />

        <RelativeLayout
            android:id="@+id/rl_traffic_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/status_bar_icon"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/tv_network_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_network_traffic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_network_type"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/status_bar_1"
            android:layout_width="42dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:background="?android:listChoiceBackgroundIndicator"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/iv_statis_bar_data"
                android:layout_width="@dimen/status_bar_button_width_height2"
                android:layout_height="@dimen/status_bar_button_width_height2"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/status_bar_2"
            android:layout_width="42dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:background="?android:listChoiceBackgroundIndicator"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/iv_statis_bar_rotate"
                android:layout_width="@dimen/status_bar_button_width_height2"
                android:layout_height="@dimen/status_bar_button_width_height2"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/status_bar_3"
            android:layout_width="42dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:background="?android:listChoiceBackgroundIndicator"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/iv_statis_bar_music"
                android:layout_width="@dimen/status_bar_button_width_height2"
                android:layout_height="@dimen/status_bar_button_width_height2"
                android:layout_gravity="center"
                android:src="@drawable/status_bar_music" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/status_bar_4"
            android:layout_width="42dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:background="?android:listChoiceBackgroundIndicator"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/iv_statis_bar_flashlight"
                android:layout_width="@dimen/status_bar_button_width_height2"
                android:layout_height="@dimen/status_bar_button_width_height2"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/status_bar_5"
            android:layout_width="42dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:background="?android:listChoiceBackgroundIndicator"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/iv_statis_bar_capture"
                android:layout_width="@dimen/status_bar_button_width_height2"
                android:layout_height="@dimen/status_bar_button_width_height2"
                android:layout_gravity="center"
                android:src="@drawable/status_bar_capture" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/status_bar_6"
            android:layout_width="42dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:background="?android:listChoiceBackgroundIndicator"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/iv_statis_bar_quick_capture"
                android:layout_width="@dimen/status_bar_button_width_height2"
                android:layout_height="@dimen/status_bar_button_width_height2"
                android:layout_gravity="center"
                android:src="@drawable/status_bar_quick_capture" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>